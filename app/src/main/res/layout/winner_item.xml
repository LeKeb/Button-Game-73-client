<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/name_field" android:layout_weight="1"
            android:gravity="center" android:textSize="20sp" android:textStyle="italic"/>
    <ImageView
            android:layout_width="50dp"
            app:srcCompat="@drawable/bronze_trophy" android:id="@+id/trophy_icon"
            android:scaleType="centerCrop" android:layout_height="75dp" android:padding="10dp"
    />
</LinearLayout>
